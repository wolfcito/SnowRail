// Prisma schema for SnowRail payroll system
// Currently using SQLite, can be switched to PostgreSQL for production
// Note: SQLite doesn't support enums, so status is stored as String

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Payroll represents a batch of payments
// Status values: PENDING, ONCHAIN_PAID, RAIL_PROCESSING, PAID, FAILED
model Payroll {
  id        String    @id @default(cuid())
  total     Int
  currency  String
  status    String    @default("PENDING")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]
}

// Individual payment within a payroll
// Status values: PENDING, ONCHAIN_PAID, RAIL_PROCESSING, PAID, FAILED
model Payment {
  id        String   @id @default(cuid())
  payrollId String
  payroll   Payroll  @relation(fields: [payrollId], references: [id])
  amount    Int
  currency  String
  status    String   @default("PENDING")
  recipient String?  // Wallet address or identifier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

