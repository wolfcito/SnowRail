// Prisma schema for SnowRail payroll system
// SQLite in dev; can be swapped to PostgreSQL in production
// Status fields are stored as String for SQLite compatibility

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Payroll represents a batch of payments
// Allowed status values: PENDING, ONCHAIN_PAID, RAIL_PROCESSING, PAID, FAILED
model Payroll {
  id        String    @id @default(cuid())
  total     Int
  currency  String
  status    String    @default("PENDING")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]
}

// Individual payment within a payroll
// Allowed status values: PENDING, ONCHAIN_PAID, RAIL_PROCESSING, PAID, FAILED
model Payment {
  id        String   @id @default(cuid())
  payrollId String
  payroll   Payroll  @relation(fields: [payrollId], references: [id])
  amount    Int
  currency  String
  status    String   @default("PENDING")
  recipient String?  // Wallet address or identifier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
