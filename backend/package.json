{
  "name": "x402-starter-kit",
  "version": "0.0.1",
  "description": "Starter kit for building paid APIs using the x402 payment protocol",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "create-x402": "./cli.js"
  },
  "scripts": {
    "build": "npx prisma generate && tsc",
    "start": "npx prisma migrate deploy && node --max-old-space-size=1024 dist/server.js",
    "start:prod": "npx prisma migrate deploy && NODE_ENV=production node --max-old-space-size=512 dist/server.js",
    "dev": "tsc && node dist/server.js",
    "facilitator": "tsc && node dist/facilitator.js",
    "facilitator:dev": "tsc && node dist/facilitator.js",
    "test": "npm run build && node dist/tests/integration/testClient.js",
    "test:shell": "bash tests/scripts/test-request.sh",
    "clean": "rm -rf dist",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate"
  },
  "keywords": [
    "x402",
    "payment-api",
    "payments",
    "usdc",
    "eip-3009"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.6.2",
    "arweave": "^1.15.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.78.0",
    "prisma": "^5.22.0",
    "typescript": "^5.9.3",
    "x402": "^0.7.0"
  },
  "devDependencies": {}
}
